<script>
    function validateName(event) {
        // Your validation logic for Name goes here
        var validation = /^[a-zA-Z\s'-]+$/.test(event.key);
        console.log(validation);
        var phoneNumberInput = document.getElementById('name');
        // Your validation logic for Phone Number goes here
        if (validation == false) {
            phoneNumberInput.style.border = '1px solid red';
        }
        if (validation == true) {
            phoneNumberInput.style.border = '1px solid #ced4da';
        }
    }

    function validateDateOfBirth(event) {
