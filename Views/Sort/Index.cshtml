    }

    function validatePhoneNumber(event) {
        // Your validation logic for Phone Number goes here
        var validation = /^\d+$/.test(event.key);
        console.log(validation);
        var phoneNumberInput = document.getElementById('phoneNo');
        // Your validation logic for Phone Number goes here
        if (validation == false) {
            phoneNumberInput.style.border = '1px solid red';
        }
        if (validation == true) {
            phoneNumberInput.style.border = '1px solid #ced4da';
        }
    }

    function validateEmail(event) {
        var val = event.target.value;
        var key = event.key;
        var email = val + key;
        var validation = /^[^\s&#64;]+&#64[^\s&#64;]+\.[^\s&#64;]+$/.test(email);
        console.log(validation);
        var phoneNumberInput = document.getElementById('email');
        // Your validation logic for Phone Number goes here
